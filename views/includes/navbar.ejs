  .search-btn {
  background-color: #fe424d;
  color: #fff;
  border-radius: 25px;
  padding: 0 1rem;
  display: flex;
  align-items: center;
  gap: 0.4rem;
  font-weight: 500;
  border: none;
  transition: all 0.2s;
}

.search-btn:hover,
.search-btn:focus {
  background-color: #e03a46;
  color: #fff;
}

.search-btn i {
  font-size: 0.95rem;
  margin-right: 0.4rem;
}

.search-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.search-inp {
  border-radius: 25px;
  padding: 0.5rem 3rem;
  font-size: 1rem;
  flex: 1;
}

